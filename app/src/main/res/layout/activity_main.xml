<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingRight="30dp">

        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/prevValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15dp" />

        <customfonts.MyTextView_Roboto_Bold
            android:id="@+id/currValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#faa2a4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingTop="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="reset"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="appendDivision"
                android:src="@drawable/ic_division"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/multiplication"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="appendMultiplication"
                android:src="@drawable/ic_multiplication_sign"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/subtraction"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="appendSubtraction"
                android:src="@drawable/ic_minus"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append7"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append8"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append9"
                android:text="9"

                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/addtion"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="appendAddition"
                android:src="@drawable/ic_add"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append4"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append5"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append6"
                android:text="6"

                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/percentage"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="appendPercentage"
                android:src="@drawable/ic_discount_symbol"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/num1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append1"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/num2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append2"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/num3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append3"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/backspace"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="removeCharacter"
                android:src="@drawable/ic_delete"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/num00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append00"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/num0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="append0"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/comma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="appendComma"
                android:text=","
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="calculate"
                android:padding="10dp"
                android:src="@drawable/ic_equal"
                android:textColor="@color/white" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
